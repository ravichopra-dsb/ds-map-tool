{
  "name": "ds-map-tool-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @ds-map-tool/web dev",
    "dev:desktop": "pnpm --filter @ds-map-tool/desktop dev",
    "dev:backend": "pnpm --filter @ds-map-tool/backend dev",
    "build": "pnpm --filter @ds-map-tool/web build",
    "build:desktop": "pnpm --filter @ds-map-tool/desktop build",
    "build:backend": "pnpm --filter @ds-map-tool/backend build",
    "build:win": "pnpm --filter @ds-map-tool/desktop build:win",
    "build:mac": "pnpm --filter @ds-map-tool/desktop build:mac",
    "build:linux": "pnpm --filter @ds-map-tool/desktop build:linux",
    "preview": "pnpm --filter @ds-map-tool/web preview",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
